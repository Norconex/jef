<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration debug="false" scan="true" scanPeriod="30 seconds">

  <!-- 
       * document: logs are expected to be under <current_dir>/logs/jef.log
       * what about if we want to share the logs dir between collectors???
         * shall we force to use different basedirs per collectors to avoid
           conflict anyway?
       * add file rolling by default. 
    -->

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${log.file:-logs/jef.log}</file>
    <encoder>
      <pattern>
        [%thread] %date{yyyy-MM-dd HH:mm:ss} %level %logger{0} %msg%n
      </pattern>
    </encoder>
  </appender>   
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        [%thread] %date{HH:mm:ss} %level %logger{0} %msg%n
      </pattern>
    </encoder>
  </appender>

  <logger name="com.norconex.jef" level="${log.level:-INFO}"/>
  <logger name="org" level="WARN"/>
  <logger name="com" level="WARN"/>
  <logger name="net" level="WARN"/>

  <root level="${log.level:-INFO}">
    <appender-ref ref="${log.appender:-FILE}" />
    <!-- Uncomment the following to also log to console: -->
    <!-- 
    <appender-ref ref="STDOUT" />
     -->
  </root>

</configuration>