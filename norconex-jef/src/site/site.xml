  <custom>
    <reflowSkin>
      <protocolRelativeURLs>false</protocolRelativeURLs>
      <highlightJs>false</highlightJs>
      <theme>site</theme>
      <localResources>true</localResources>
      <brand>
        <name><![CDATA[
          <span class="color-highlight">Norconex</span> JEF
