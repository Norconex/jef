      <skinAttribution>false</skinAttribution>

      <breadcrumbs>false</breadcrumbs>
      <markPageHeader>false</markPageHeader>
      <toc>none</toc>
      <smoothScroll>true</smoothScroll>

      <pages>

        <index>
          <breadcrumbs>false</breadcrumbs>
          <sections>
            <body />
            <columns>2</columns>
          </sections>
        </index>

        <download>
          <breadcrumbs>false</breadcrumbs>
          <sections>
            <columns>2</columns>
          </sections>
        </download>

        <contribute>
          <sections>
            <columns>2</columns>
          </sections>
        </contribute>

      </pages>
      
      <endContent>
        <script src="$resourcePath/js/highlight.min.js"></script>
      </endContent>
    </reflowSkin>
